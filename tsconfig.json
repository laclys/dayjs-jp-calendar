{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2019", "dom", "esnext"],
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
